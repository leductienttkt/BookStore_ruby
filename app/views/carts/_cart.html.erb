<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th class="text-center">Price</th>
            <th class="text-center">Total</th>
            <th> </th>
          </tr>
        </thead>
        <tbody>
          <%= render(cart.line_items.includes(:book)) %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-3 total" id="sticker">
      <table class="table table-hover">
        <tr>
        <td><h4>Total: </h4></td>
          <td class="text-right"><h4><strong><%= number_to_currency(cart.total_price) %></strong></h4></td>
        </tr>
        <tr>
          <td><h4>Sale: </h4></td>
          <td class="text-right"><h4><strong><%= number_to_currency(cart.total_price) %></strong></h4></td>
        </tr>
        <tr>
          <td>
            <a href="/books" class="btn btn-default">
              <span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping
            </a>
          </td>
          <td class="text-right">
            <a href="#" class="btn btn-success">
              Checkout <span class="glyphicon glyphicon-play"></span>
            </a>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure?' } %>
